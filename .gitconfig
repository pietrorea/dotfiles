[init]
    defaultBranch = main
[user]
    name = Pietro Rea
    email = pietro@pietrorea.com
[core]
    excludesfile = ~/.gitignore_global
    editor = vim
[push]
    default = current
[pull]
    rebase = false
[fetch]
    prune = true
[branch]
    sort = -committerdate
[diff]
    colorMoved = zebra